{
  "extends": "airbnb",
  "parser": "babel-eslint",
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "rules": {
    "react/prefer-stateless-function": 0,
    "react/jsx-filename-extension": [
      1, { "extensions": [".js", ".jsx"] }
    ],
    "no-underscore-dangle": [
      "error", { "allow": ["_id"] }
    ],
    "comma-dangle": [
      "error",
      "never"
    ],
    "linebreak-style": [
      "error",
      "windows"
    ]
  }
}